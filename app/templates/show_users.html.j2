{% extends "base.html.j2" %}

{% block content %}
    {% for user in users %}
        {% if not user.id == current.user.id %}
            <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                <img src="" class="img-fluid rounded-start" alt="user_avatar">
                </div>
                <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{ user.first_name }} {{ user.last_name }}</h5>
                    <p class="card-text">"Catchphrase"</p>
                    {% if current_user.is_following(user) %}
                        <a href="/unfollow/{{user.id}}" class="btn btn-danger">Unfollow</a>
                    {% else %}
                        <a href="/unfollow/{{user.id}}" class="btn btn-info">Follow</a>
                    {% endif %}
                </div>
                </div>
            </div>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}